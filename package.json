		"babel-eslint": "^7.2.3",
		"chai": "^4.1.2",
		"eslint": "^3.19.0",
		"eslint-config-fullstack": "^3.0.0",
		"eslint-formatter-pretty": "^1.1.0",
		"eslint-plugin-react": "^7.0.1",
		"husky": "^0.14.3",
